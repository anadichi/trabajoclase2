<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="Hello Body" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="Welcome to"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="104dp"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Payaqui"
        android:textColor="#FF9800"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:foregroundGravity="center"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="Login with" />

    <Button
        android:id="@+id/button"
        android:layout_width="312dp"
        android:layout_height="58dp"
        android:background="#3D4FB3"
        android:gravity="center"
        android:shadowColor="#3F51B5"
        android:text="LOGIN WITH FACEBOOK"
        android:textColor="#F8F7F8"
        android:textColorLink="#00CC2323" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#DF5047"
        android:text="LOGIN WITH GOOGLE"
        android:textColor="#F8F7F7"
        android:textColorHint="#F8FFFEFE" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Terms and service" />
</LinearLayout>